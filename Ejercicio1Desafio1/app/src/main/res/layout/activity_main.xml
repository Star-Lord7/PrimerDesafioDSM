<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Ingrese el nombre de el/la estudiante"
            android:layout_marginStart="15dp"/>

        <EditText

            android:id="@+id/NombreEstudiante"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nota1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Ingresa nota Actividad_1 (15%)"
                android:layout_marginStart="15dp"/>

            <EditText
                android:id="@+id/Nota1"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="16dp"
                android:inputType="numberDecimal" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nota2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ingresa nota Actividad_2 (15%)"
            android:layout_marginStart="15dp"/>

        <EditText
            android:id="@+id/Nota2"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="30dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nota3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ingresa nota Actividad_3 (20%)"
            android:layout_marginStart="15dp"/>

        <EditText
            android:id="@+id/Nota3"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nota4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ingresa nota Actividad_4 (25%)"
            android:layout_marginStart="15dp"/>

        <EditText
            android:id="@+id/Nota4"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nota5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Ingresa nota Actividad_5 (25%)"
            android:layout_marginStart="15dp"/>

        <EditText
            android:id="@+id/Nota5"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:lineSpacingExtra="8sp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="30dp" />
    </LinearLayout>
        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular nota final" />

        <TextView
            android:id="@+id/Resultado"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:paddingTop="20dp"
            android:text=""
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="15dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>